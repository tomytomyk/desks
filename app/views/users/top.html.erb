<h1>トップページ</h1>

<% if flash[:notice] %>
  <%= notice %>
<% end %>

<p>ログイン</p>
<%= form_tag users_login_path do %>
  <%= text_field_tag :name, "", placeholder:"名前"%>
  <%= password_field_tag :password, "", placeholder:"パスワード" %>
  <%= submit_tag %>
<% end %>
<p>新規登録</p>
<%= form_for @user do |f| %>
  <%= f.text_field :name,  placeholder:"名前" %>
  <%= f.password_field :password, placeholder:"パスワード" %>
  職種：<%= f.collection_select(:occupation_id, Occupation.all, :id, :name) %>
  <%= f.submit %>
<% end %>

<%= link_to "ログインせずに閲覧", reports_path %>