<% @users.each do |user| %>
  <div class="user-index">
    <div class="user-index-image-square <%= user.id %>">
      <%= render "users/image", user: user.id, s: 10 %>
    </div>
    <%= link_to user.name, user_path(user.id) %>
    <%= user.occupation.name %>
      フォロー
    <%= user.followed_relationships.count %>
      フォロワー
    <%= user.follower_relationships.count %>
        最終ログイン
    <% if user.login_time != nil %>
      <% t = Time.now - user.login_time %>
      <% if 0 <= t && t < 60 %>
        <%= t %>秒前
      <% elsif 60 <= t && t < 3600 %>
        <%= (t / 60).floor %>分前
      <% elsif 3600 <= t && t< 86400 %>
        <%= (t / 3600).floor %>時間前
      <% elsif %>
        <%= (t / 86400).floor %>日前
      <% end %>
    <% end %>
  </div>
<% end %>