<%= form_for @report do |f| %>
  <%= f.collection_select(:item_id, Item.all, :id, :name) %>
  1:<%= f.radio_button :value ,"1" %>
  2:<%= f.radio_button :value ,"2" %>
  3:<%= f.radio_button :value ,"3" %>
  4:<%= f.radio_button :value ,"4" %>
  5:<%= f.radio_button :value ,"5" %>
  <%= f.text_field :title, placeholder: "タイトル" %>
  <%= f.text_field :body, placeholder: "感想など" %>
  <%= f.submit %>
<% end %>